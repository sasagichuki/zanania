<footer class="footer-section global-footer global-section">
	<div class="footer-wrap global-wrap global-flex">
		<div class="footer-nav">
			<nav>
				<ul>
					{{#if @site.secondary_navigation}}
					{{navigation type="secondary"}}
					{{else}}
					{{navigation}}
					{{/if}}
				</ul>
			</nav>
		</div>
		<div class="footer-icons global-flex">
			{{#if @site.facebook}}
			<a href="{{facebook_url}}" aria-label="link Facebook">{{>icons/social/facebook}}</a>
			{{/if}}
			{{#if @site.twitter}}
			<a href="{{twitter_url}}" aria-label="link Twitter">{{>icons/social/twitter}}</a>
			{{/if}}
			{{>footer_icons}}
		</div>
		<div class="footer-copyright">
			<a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}}. 
			{{#if @custom.footer_copyright}}
			{{{@custom.footer_copyright}}}
			{{else}}
			{{{t "All Right Reserved. Published with {ghost_link} & {theme_name}." ghost_link="<a href=\"https://ghost.org\" target=\"_blank\" rel=\"noopener noreferrer\">Ghost</a>" theme_name="<a href=\"https://fueko.net\" target=\"_blank\" rel=\"noopener noreferrer\">Maido</a>"}}}
			{{/if}}
		</div>
	</div>
</footer>