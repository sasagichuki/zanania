{{!< ../default-custom}}
{{#contentFor "custom_meta_title"}}{{t "Sign up"}}{{/contentFor}}
<body class="custom-subscribe{{#if @custom.white_text_when_accent_color_is_dark}} global-white-text{{/if}}">
	<div class="custom-wrap global-flex">
		{{#if @site.cover_image}}
		<div class="global-cover global-bg-image{{#if @site.cover_image}} custom-cover{{/if}}" style="background-image: url({{@site.cover_image}})"></div>
		{{/if}}
		{{#get "posts" limit="5" filter="feature_image:-null" as |gallery|}}
		{{#if gallery}}
		<div class="custom-image">
			<div class="custom-gallery global-flex">
				<div class="custom-gallery-row is-one global-flex">
					{{#foreach posts to="1"}}
					<div class="custom-gallery-image global-bg-image" style="background-image: url({{feature_image}})"></div>
					{{/foreach}}
				</div>
				{{#foreach posts from="2" to="2"}}
				<div class="custom-gallery-row is-two global-flex">
					{{/foreach}}
					{{#foreach posts from="2" to="3"}}
					<div class="custom-gallery-image global-bg-image" style="background-image: url({{feature_image}})"></div>
					{{/foreach}}
					{{#foreach posts from="2" to="2"}}
				</div>
				{{/foreach}}
				{{#foreach posts from="4" to="4"}}
				<div class="custom-gallery-row is-three global-flex">
					{{/foreach}}
					{{#foreach posts from="4" to="5"}}
					<div class="custom-gallery-image global-bg-image" style="background-image: url({{feature_image}})"></div>
					{{/foreach}}
					{{#foreach posts from="4" to="4"}}
				</div>
				{{/foreach}}
			</div>
		</div>
		{{/if}}
		{{/get}}
		<div class="custom-flex global-flex">
			<div class="custom-header">
				<a href="{{@site.url}}" class="custom-heading global-heading">{{>icons/site/arrow}}{{t "Back to Homepage"}}</a>
			</div>
			<div class="custom-content global-flex">
				<div class="subscribe-content">
					<form data-members-form="signup" class="subscribe-form">
						<h3 class="subscribe-title">{{t "Signup to {blog_title}" blog_title=@site.title}}</h3>
						<div class="subscribe-ityped">
							<span id="ityped"></span>
						</div>
						<input data-members-name class="subscribe-input global-input" type="text" placeholder="{{t "Your name"}}" aria-label="{{t "Your name"}}" required>
						<input data-members-email class="subscribe-input global-input" type="email" placeholder="{{t "Your email address"}}" aria-label="{{t "Your email address"}}" required>
						<button class="subscribe-button global-button" type="submit">{{t "Continue"}}</button>
						<script>
						const iTypedText = ["{{{t 'Thoughts, stories and ideas'}}}"];
						</script>
					</form>
					<small class="subscribe-question global-question">{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small>
					<p class="subscribe-alert subscribe-alert-loading">{{t "Processing your application"}}</p>
					<p class="subscribe-alert subscribe-alert-error">{{t "There was an error sending the email"}}</p>
					<div class="subscribe-success">
						<h3 class="subscribe-title">{{t "Great!"}}</h3>
						<p>{{t "Check your inbox and click the link to confirm your signup"}}</p>
						<a href="{{@site.url}}" class="global-button">{{t "Back to Homepage"}}</a>
					</div>
				</div>
			</div>
			{{#if @site.description}}
			<div class="custom-footer">
				<a href="{{@site.url}}">{{@site.title}}.</a>
				<span>{{@site.description}}.</span>
			</div>
			{{/if}}
		</div>
	</div>
	<script src="{{asset "js/global.js"}}"></script>
	<script>document.addEventListener("DOMContentLoaded",function(){const a=document.body;a.classList.add("is-loaded")})</script>
	{{ghost_foot}}
</body>