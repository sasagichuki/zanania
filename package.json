{
    "name": "maido",
    "demo": "https://maido.fueko.net",
    "version": "3.0.0",
    "author": {
        "name": "fueko",
        "email": "hello@fueko.net",
        "url": "https://fueko.net"
    },
    "keywords": [
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 8,
        "card_assets": {
            "exclude": ["bookmark", "gallery", "blockquote"]
        },
        "custom": {
            "color_scheme": {
                "type": "select",
                "options": ["Light", "Dark", "Auto"],
                "default": "Light"
            },
            "white_text_when_accent_color_is_dark": {
                "type": "boolean",
                "default": false
            },
            "content_api_key_for_search": {
                "type": "text"
            },
            "contact_form_endpoint": {
                "type": "text"
            },
            "footer_copyright": {
                "type": "text"
            },
            "layout": {
                "type": "select",
                "options": ["Big posts", "Big posts & Grid", "Grid & Big posts", "Grid"],
                "default": "Big posts",
                "group": "homepage"
            },
            "two_large_posts_in_a_grid_layout": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "color_label_on_the_left_side": {
                "type": "boolean",
                "default": false,
                "group": "post"
            },
            "disqus_shortname": {
                "type": "text",
                "group": "post"
            }
        }
    }
}